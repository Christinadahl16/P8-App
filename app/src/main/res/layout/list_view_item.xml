<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="1dp"
        android:layout_width="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/productImage"
        android:adjustViewBounds="true"
        android:maxWidth="65dp"
        android:maxHeight="65dp"
        />

    <ImageButton
        android:id="@+id/decreaseProduct"
        android:onClick="DecreaseOrder"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/decrease"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <ImageButton
        android:layout_marginTop="0dp"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:onClick="EditProduct"
        android:id="@+id/editProductButton"
        android:src="@drawable/edit"
        android:visibility="visible" />

    <EditText
        android:id="@+id/product_quantity"
        android:layout_width="39dp"
        android:layout_height="64dp"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="163dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:inputType="number"
        android:text="0"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/increaseProduct"
        android:onClick="IncreaseOrder"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="-1dp"
        android:src="@drawable/increase"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/productlistprice"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:translationZ="2dp"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="name"
        android:textSize="14sp" />

</RelativeLayout>