<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProductAdditionActivity">

        <!--Headline TextView-->
        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_horizontal"
            android:text="Welcome to GrÃ¸nttorvet at Frederikstorv"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <EditText
            android:id="@+id/farmer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:hint="Product Name"
            android:inputType="text"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <EditText
            android:id="@+id/farmer_details"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="12dp"
            android:hint="Farmer Details"
            android:inputType="text"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/farmer_name"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/farmer_name"
            app:layout_constraintTop_toBottomOf="@+id/farmer_name" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/farmer_image_view"
            android:onClick="selectImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/farmer_name"
            app:layout_constraintTop_toBottomOf="@+id/farmer_details"
            app:layout_constraintVertical_bias="0.214"
            ></ImageView>

        <!--Login button-->
        <Button
            android:id="@+id/farmer_image"
            android:layout_width="150dp"
            android:layout_height="46dp"
            android:layout_marginBottom="64dp"
            android:backgroundTint="@color/Blue"
            android:onClick="selectImage"
            android:text="Select Image"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/farmer_image_view"
            app:layout_constraintStart_toStartOf="@+id/farmer_image_view"
            app:layout_constraintTop_toBottomOf="@+id/farmer_image_view"
            app:layout_constraintVertical_bias="0.214" />

        <Button
            android:id="@+id/create_farmer"
            android:layout_width="360dp"
            android:layout_height="46dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="64dp"
            android:onClick="CreateFarmer"
            android:backgroundTint="@color/Green"
            android:text="Create"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/farmer_name"
            app:layout_constraintTop_toBottomOf="@+id/farmer_image"
            app:layout_constraintVertical_bias="0.501" />
        <Button
            android:id="@+id/delete_farmer"
            android:layout_width="360dp"
            android:layout_height="46dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="64dp"
            android:onClick="deleteFarmer"
            android:backgroundTint="@color/purple_200"
            android:text="Delete Farmer"
            android:textColor="@color/black"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/create_farmer"
            app:layout_constraintTop_toBottomOf="@+id/create_farmer"
            app:layout_constraintVertical_bias="0.501" />


    </androidx.constraintlayout.widget.ConstraintLayout>
